{
  "homepage": "./",
  "name": "quiqr",
  "license": "MIT",
  "author": {
    "name": "Quiqr Organization",
    "email": "info@quiqr.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quiqr/quiqr-desktop-ng.git"
  },
  "description": "Local-first CMS for static files and engines like Quarto or Hugo SSG",
  "version": "0.21.1",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron:wait\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:electron:wait": "wait-on http://localhost:4001 && npm run dev:electron",
    "build": "npm run build:frontend && electron-builder",
    "build:frontend": "cd frontend && npm run build",
    "release": "release-script --addPlaceholder",
    "dist": "electron-builder",
    "_copy-electron-code": "copyfiles -u 1 \"./src-main/**/*\" \"./build/electron/\"",
    "_pack_embgit": "node scripts/embgit-sh-runner.js",
    "_build_info": "node scripts/build_info.js",
    "_hugo_versions": "node scripts/getHugoVersions.js"
  },
  "oldscripts": {
    "_electron-lint": "cross-env NODE_ENV=development eslint ./backend/src-main",
    "_mac-notarize": "node scripts/notarize.js",
    "devold:frontend-old": "cd frontend && vite",
    "devold": "concurrently  \"npm run dev:backend\" \"npm run dev:electron\"",
    "devold:react": "cross-env APP_ENV=development BROWSERSLIST_IGNORE_OLD_DATA=true BROWSER=none PORT=4001 react-scripts start",
    "buildold:react": "cross-env BROWSERSLIST_IGNORE_OLD_DATA=true react-scripts build"
  },
  "keywords": [],
  "dependencies": {
    "7zip-bin": "3.1.0",
    "adm-zip": "0.4.13",
    "await-spawn": "4.0.1",
    "chokidar": "^3.5.3",
    "copyfiles": "2.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "deepmerge": "^4.2.2",
    "del": "^6.0.0",
    "electron-progressbar": "^1.2.0",
    "electron-window-state": "^5.0.3",
    "express": "^4.21.2",
    "front-matter": "^4.0.2",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "jimp": "^1.6.0",
    "joi": "^17.13.3",
    "js-yaml": ">=3.13.1",
    "jsonfile": "^6.1.0",
    "mkdirp": "^0.5.6",
    "node-fetch": "^2.6.11",
    "openai": "^4.64.0",
    "prop-types": "^15.8.1",
    "react-codemod": "^5.4.4",
    "request": "2.87.0",
    "toml": "2.3.3",
    "tomlify-j0.4": "3.0.0",
    "user-home": "2.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.6",
    "concurrently": "^9.1.2",
    "electron": "^31.4.0",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.4"
  },
  "disabledDeps": {
    "classnames": "^2.3.2",
    "nodemon": "^3.1.9"
  },
  "disabledDevDeps": {
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "@babel/core": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "babel-loader": "^9.2.1",
    "vite": "^6.0.11"
  },
  "build": {
    "appId": "com.example.viteapp",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github"
    },
    "files": [
      "dist/**/*",
      "frontend/build/**/*",
      "electron/**/*",
      "resources/**/*",
      "backend/**/*",
      "backend/server.js"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
