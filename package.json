{
  "homepage": "./",
  "name": "quiqr",
  "license": "MIT",
  "author": {
    "name": "Quiqr Organization",
    "email": "info@quiqr.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quiqr/quiqr-desktop-ng.git"
  },
  "description": "Local-first CMS for static files and engines like Quarto or Hugo SSG",
  "version": "0.21.4",
  "main": "packages/adapters/electron/dist/main.js",
  "scripts": {
    "clean": "rm -rf node_modules dist build frontend/node_modules frontend/dist frontend/build packages/types/node_modules packages/types/dist packages/types/build packages/backend/node_modules packages/backend/dist packages/backend/build packages/adapters/electron/node_modules packages/adapters/electron/dist packages/adapters/electron/build packages/adapters/standalone/node_modules packages/adapters/standalone/dist packages/adapters/standalone/build",
    "dev": "concurrently --names \"types,backend,adapter,frontend,electron\" -c \"blue,magenta,cyan,green,yellow\" \"npm run dev -w @quiqr/types\" \"npm run dev -w @quiqr/backend\" \"npm run dev -w @quiqr/adapter-electron\" \"npm run dev:frontend\" \"npm run dev:electron:wait\"",
    "dev:backend": "npm run dev -w @quiqr/backend",
    "dev:backend:standalone": "concurrently --names \"types,backend,standalone,server\" -c \"blue,magenta,cyan,green\" \"npm run dev -w @quiqr/types\" \"npm run dev -w @quiqr/backend\" \"npm run dev -w @quiqr/adapter-standalone\" \"npm run dev:start -w @quiqr/adapter-standalone\"",
    "start:backend:standalone": "npm run build -w @quiqr/types && npm run build -w @quiqr/backend && npm run build -w @quiqr/adapter-standalone && npm run start -w @quiqr/adapter-standalone",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:electron:wait": "wait-on http://localhost:4002 && npm run dev:electron",
    "build": "npm run _build_info && npm run build:packages && npm run build:frontend && npm run _pack_embgit && electron-builder",
    "build:appimage": "npm run _build_info && npm run build:packages && npm run build:frontend && npm run _pack_embgit && electron-builder --linux AppImage",
    "build:rpm": "npm run _build_info && npm run build:packages && npm run build:frontend && npm run _pack_embgit && electron-builder --linux rpm",
    "build:windows": "npm run _build_info && npm run build:packages && npm run build:frontend && npm run _pack_embgit && electron-builder --win",
    "build:packages": "npm run build -w @quiqr/types && npm run build -w @quiqr/backend && npm run build -w @quiqr/adapter-electron && npm run build -w @quiqr/adapter-standalone",
    "build:frontend": "cd frontend && npm run build",
    "release": "release-script --addPlaceholder",
    "dist": "electron-builder",
    "_pack_embgit": "node scripts/embgit-sh-runner.js",
    "_build_info": "node scripts/build_info.js",
    "_hugo_versions": "node scripts/getHugoVersions.js",
    "scaffold:field": "node scripts/scaffold-field.js"
  },
  "keywords": [],
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "7zip-bin": "3.1.0",
    "adm-zip": "0.4.13",
    "await-spawn": "4.0.1",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "deepmerge": "^4.3.1",
    "electron-progressbar": "^1.2.0",
    "electron-window-state": "^5.0.3",
    "express": "^4.21.2",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.5",
    "jimp": "^1.6.0",
    "js-yaml": ">=3.13.1",
    "markdown-it": "^14.1.0",
    "react-scan": "^0.4.3",
    "toml": "2.3.3",
    "tomlify-j0.4": "3.0.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.6",
    "@electron/notarize": "^3.1.1",
    "@types/adm-zip": "^0.5.7",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.3",
    "electron-builder": "^26.3.3",
    "wait-on": "^8.0.4"
  },
  "disabledDeps": {
    "classnames": "^2.3.2",
    "nodemon": "^3.1.9"
  },
  "disabledDevDeps": {
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "@babel/core": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "babel-loader": "^9.2.1",
    "vite": "^6.0.11"
  },
  "build": {
    "appId": "org.quiqr.quiqr-desktop",
    "artifactName": "quiqr_${version}_${os}_${arch}.${ext}",
    "productName": "Quiqr",
    "files": [
      "frontend/build/**/*",
      "packages/adapters/electron/dist/**/*",
      "packages/adapters/electron/package.json",
      "packages/backend/dist/**/*",
      "packages/backend/package.json",
      "packages/types/dist/**/*",
      "packages/types/package.json",
      "resources/**/*",
      "package.json",
      {
        "from": "packages/types",
        "to": "node_modules/@quiqr/types",
        "filter": [
          "dist/**/*",
          "package.json"
        ]
      },
      {
        "from": "packages/backend",
        "to": "node_modules/@quiqr/backend",
        "filter": [
          "dist/**/*",
          "package.json"
        ]
      },
      {
        "from": "packages/adapters/electron",
        "to": "node_modules/@quiqr/adapter-electron",
        "filter": [
          "dist/**/*",
          "package.json"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/@quiqr/**/*",
      "node_modules/7zip-bin/**/*",
      "node_modules/7zip-bin-win/**/*",
      "node_modules/7zip-bin-linux/**/*",
      "node_modules/7zip-bin-mac/**/*"
    ],
    "directories": {
      "buildResources": "frontend/public",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "protocols": [
      {
        "name": "quiqr",
        "role": "Editor",
        "schemes": [
          "quiqr"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "resources/${os}",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/all",
        "to": "all",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsisWeb": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "unicode": true,
      "installerIcon": "icon.ico",
      "differentialPackage": true
    },
    "mac": {
      "icon": "icon",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "icon": "icon",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "office"
    },
    "fileAssociations": [
      {
        "ext": "pogosite",
        "name": "Quiqr Site File",
        "role": "Editor",
        "icon": "iconfile"
      },
      {
        "ext": "pogopass",
        "name": "Quiqr Passport File",
        "role": "Editor",
        "icon": "iconfile"
      },
      {
        "ext": "pogocontent",
        "name": "Quiqr Content File",
        "role": "Editor",
        "icon": "iconfile"
      },
      {
        "ext": "pogotheme",
        "name": "Quiqr Theme File",
        "role": "Editor",
        "icon": "iconfile"
      }
    ]
  },
  "workspaces": [
    "packages/types",
    "packages/backend",
    "packages/adapters/electron",
    "packages/adapters/standalone",
    "frontend"
  ]
}
